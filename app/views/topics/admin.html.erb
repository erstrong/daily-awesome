<h1>Topic Administration</h1>

<% if current_user.admin? %>
  <div class="row">
    <div class="col-md-10">
      <table class="admin_table">
        <tr>
          <td><h5>Name</h5></td>
          <td><h5>Prompt</h5></td>
          <td><h5>Category</h5></td>
          <td><h5>Date Scheduled</h5></td>
          <td><h5>Edit</h5></td>
        </tr>
        
        <% @topics.each do |topic| %>
          <tr>
            <td><%= topic.title %></td>
            <td><%= topic.prompt %></td>
            <td><%= topic.category %></td>
            <td><%= topic.display_date.strftime("%m-%d-%Y") %></td>
            <td><%= link_to "Edit", topic %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-2">

        <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>

    </div>
  </div>

<% else %>
  <p>You do not have permission to view this content</p>
<% end %>