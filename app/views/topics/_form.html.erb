    <%= form_for topic do |f| %>

      <div class="form-group">
         <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter topic title" %>
      </div>

      <div class="form-group">
         <%= f.label :prompt %>
        <%= f.text_area :prompt, rows: 10, class: "form-control", placeholder: "Enter topic prompt" %>
      </div>

      <div class="form-group">
        <%= f.radio_button :category, "Writing", :value => "Writing", :checked => true %>
        <%= label :category_Writing, "Writing" %> <br />
        <%= f.radio_button :category, "Picture", :value => "Picture" %>
        <%= label :category_Picture, "Picture" %> <br />
        <%= f.radio_button :category, "Video", :value => "Video" %>
        <%= label :category_Video, "Video" %> <br />
        <%= f.radio_button :category, "Audio", :value => "Audio" %>
        <%= label :category_Audio, "Audio" %> <br />
        <%= f.radio_button :category, "Activity", :value => "Activity" %>
        <%= label :category_Activity, "Activity" %>
      </div>

      <div class="form-group">
        <%= f.label :display_date, "Assign a date to this topic" %>
        <%= f.date_field :display_date %> 
      </div>
        
      <%= f.submit "Save", class: "btn btn-success" %>

    <% end %>