
<%= form_for [entry] do |f| %>
  <div class="form">

    <% if @topic.image? %>
      <% if entry.image? %>
        <div class="form-group">
          <p>Current Image </p>
          <%= image_tag( entry.image.large.url ) %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>
    <% end %> 

    <div class="form-group" >
      <%= f.text_area :body, class: 'wysihtml5',  id: 'entry_body', placeholder: "Enter entry body" %>
    </div>
    
    <div class="form-group">
      <%= f.label :public, class: 'checkbox' do %>
        <%= f.check_box :public %> Public entry
      <% end %>
    </div>
    
    <%= f.hidden_field :topic_id, :value => @topic.id %>

    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>

  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>