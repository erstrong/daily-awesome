
<%= form_for [entry] do |f| %>
  <div class="form">
    <div class="form-group" >
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter entry body" %>
    </div>
    
    <div class="form-group">
      <%= f.label :public, class: 'checkbox' do %>
        <%= f.check_box :public %> Public entry
      <% end %>
    </div>


    <% if f.topic_id.exists? %>
      <%= f.hidden_field :topic_id, :value => f.topic_id %>
    <% else %>
      <%= f.hidden_field :topic_id, :value => @topic.id %>
    <%end%>

    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>

  </div>
<% end %>
